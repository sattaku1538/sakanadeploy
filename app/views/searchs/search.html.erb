<div class ='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
        <% if @model == 'customer' %>
          <h4>【登録者の検索結果】検索ワード：<%= @content %></h4>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>ユーザー名</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @records.each do |customer| %>
                <tr>
                  <td><%= customer.name %></td>
                  <td>
                  <% if customer_signed_in? %>
                  <%= link_to 'ユーザー詳細', public_customer_path(customer), class: "customer_#{customer.id}" %>
                  <% end %>
                  </td>
                  <td>
                  <% if admin_signed_in? %>
                  <%= link_to 'ユーザー詳細', admin_customer_path(customer), class: "customer_#{customer.id}" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>

        <% else @model == 'book' %>
          <h4>【投稿の検索結果】検索ワード：<%= @content %></h4>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>活動タイトル</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <%= paginate @records %>
            <tbody>
              <% @records.each do |book| %>
                <tr>
                  <td><%= book.title %></td>
                  <td><% if customer_signed_in? %>
                  <%= link_to '投稿の詳細', public_book_path(book), class: "book_#{book.id}" %>
                  <% end %>
                  </td>
                  <td>
                  <% if admin_signed_in? %>
                  <%= link_to '投稿の詳細', admin_book_path(book), class: "customer_#{book.id}" %>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
            <%= paginate @records %>
    </div>
  </div>
</div>