<div class='row'>
  <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>投稿画像</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <!--<tr id="book_%= @book.id %>">-->
              <td>
                <p>タイトル：<%= book.title %></p>
              </td>
                <td><%= link_to public_book_path(book.id) do %>
                  <%= attachment_image_tag book, :image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
                  <% end %>
                </td>
                <!--<td>%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>-->
                <!--<td>%= book.body %></td>-->
                <!--<td>コメント数: %= book.book_comments.count %></td>-->
                <!--<td class="favorite-btn-%= book.id %>">%= render "favorites/favorite-btn", book: book %></td>-->
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>