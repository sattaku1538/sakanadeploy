<h2>あなたの親切を投稿してください。</h2>

<%= form_with model:[:public, @book], local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', size: "20x10" %>
  </div>
  <div class="form-group">
    <%= f.label :image_id %>
    <%= f.attachment_field :image_id, class: 'form-control', size: "20x10" %>
  </div>
  <div class="form-group">
    <%= f.label :place %>
    <%= f.text_area :place, class: 'form-control', size: "20x10" %>
  </div>
  <div class="form-group">
    <%= f.label :explanation %>
    <%= f.text_area :explanation, class: 'form-control', size: "20x10" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>